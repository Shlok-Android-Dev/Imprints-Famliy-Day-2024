<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.Bridge">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/border_bottom_sheet</item>
    </style>
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>
    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/colorPrimary</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="my_dialog_theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black_transparent</item>
        <item name="android:windowBackground">@color/black_transparent</item>     <!--calendar background-->
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/transparent</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/black</item>    <!--days of the week-->
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryTransparent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>

    </style>

    <style name="SpinnerTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/color2</item>
        <item name="android:checkMark">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="my_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">55%</item>
        <item name="windowMinWidthMinor">55%</item>
        <item name="windowFixedWidthMajor">60%</item>
        <item name="windowFixedWidthMinor">60%</item>

        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>


    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="boxStrokeColor">@color/color2</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>




        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/color2</item>

    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/app_orange_color</item>
        <item name="colorAccent">@color/dark_light_txtColor</item>
        <item name="android:background">@color/dark_light_backColorup</item>
        <item name="android:textColorPrimary">@color/dark_light_txtColor</item>
    </style>
    <style name="DialogLight" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
