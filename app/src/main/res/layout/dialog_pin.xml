<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_300dp"
    android:background="@drawable/border_layout_success"

    android:orientation="vertical">
    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="@dimen/dimen_60dp"
        android:gravity="center"
        android:maxWidth="300dp"
        android:padding="@dimen/dimen_5dp"
        android:text="Enter Pin"
        android:textColor="#203A45"
        android:textSize="@dimen/dimen_22sp"
        android:textStyle="bold"


        />


    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/inputLayoutNAme"
        style="@style/TextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:hint="Pin"
        android:textColorHint="@color/black"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:hintTextColor="@color/black"
        >

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:inputType="number"
            android:maxEms="4"
            android:maxLength="4"

            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_70dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/textsize"
            app:hintTextColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/warning_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputLayoutNAme"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:text="* Wrong Pin "
        android:textColor="@color/solid_red"
        android:textSize="@dimen/txtSizesmall"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/warning_name"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_no"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_20dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:text="cancel"
            android:textAllCaps="false"
            android:textColor="@color/color2"
            android:textSize="@dimen/textsize"
             />

        <Button


            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="22dp"


            android:background="@drawable/corner_blue"

            android:paddingLeft="@dimen/dimen_20dp"

            android:paddingTop="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_20dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize" />

    </LinearLayout>




</RelativeLayout>