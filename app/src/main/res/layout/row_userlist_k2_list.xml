<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_10dp"
        android:background="@drawable/corner_userlist1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text="Name :"
                    android:textColor="#6F6F6F"
                    android:textSize="@dimen/dimen_16sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Anil saini"
                    android:textColor="#3F2E88"
                    android:textSize="@dimen/dimen_25sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text="Email :"
                    android:textColor="#6F6F6F"
                    android:textSize="@dimen/dimen_16sp"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="anil@gmail.com"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dimen_22sp"/>

                <View
                    android:layout_width="@dimen/dimen_2dp"
                    android:layout_height="match_parent"
                    android:background="#707070"/>

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="8209938444"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dimen_22sp"
                    android:visibility="visible"
                    />




            </LinearLayout>


            <LinearLayout
                android:id="@+id/llcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text="Code :"
                    android:textColor="#6F6F6F"
                    android:textSize="@dimen/dimen_16sp"
                    />



                <TextView
                    android:id="@+id/qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dimen_18sp"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llcompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:padding="5dp"
                    android:text="Company :"
                    android:textColor="#6F6F6F"
                    android:textSize="@dimen/dimen_16sp"
                    android:visibility="gone"
                    />



                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popins_regular"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Branch Manager"
                    android:textColor="#707070"
                    android:textSize="@dimen/dimen_22sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:padding="5dp"
                    android:text="Designation :"
                    android:textColor="#6F6F6F"
                    android:textSize="@dimen/dimen_16sp"
                    />



                <TextView

                    android:id="@+id/designation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="visible"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/llUserType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:padding="5dp"
                    android:text="Type :"
                    android:textColor="#6F6F6F"
                    android:textSize="@dimen/dimen_16sp"
                    />



                <TextView

                    android:id="@+id/userType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="visible"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/llmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text="Mobile :"
                    android:textColor="#6F6F6F"
                    android:textSize="@dimen/dimen_16sp"
                    />





            </LinearLayout>

            <LinearLayout
                android:id="@+id/llattending_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text="City,Festival date"
                    android:textColor="#6F6F6F"
                    android:textSize="@dimen/dimen_16sp"
                    />


                <TextView
                    android:id="@+id/attending_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dimen_18sp"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="5dp"
                    android:text="category :"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_22sp"
                    />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="visible"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lltemple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text="Promo Code :"
                    android:textColor="#6F6F6F"
                    android:textSize="@dimen/dimen_16sp"
                    />



                <TextView

                    android:id="@+id/temple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="visible"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text="Date :"
                    android:textColor="#6F6F6F"
                    android:textSize="@dimen/dimen_16sp"
                    />



                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="5dp"
                    android:text="9782146011"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="visible"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/print_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/round_corner_10_stroke_dots_line"
                    android:fontFamily="@font/popins_medium"
                    android:paddingHorizontal="@dimen/dimen_10dp"
                    android:paddingVertical="@dimen/dimen_7dp"
                    android:text="Already Printed"
                    android:textColor="@color/mahroon"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/txtEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:background="@drawable/round_corner20_outline_width2_appcolor"
                    android:drawableLeft="@drawable/ic_edit"
                    android:drawableTint="@color/primary_color"
                    android:fontFamily="@font/popins_regular"
                    android:paddingStart="@dimen/dimen_17dp"
                    android:paddingTop="@dimen/dimen_6dp"
                    android:paddingRight="@dimen/dimen_20dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:text="Edit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/upgrad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:background="@drawable/round_corner20_outline_width2_appcolor"
                    android:drawableTint="@color/primary_color"
                    android:fontFamily="@font/popins_regular"
                    android:paddingStart="@dimen/dimen_17dp"
                    android:paddingTop="@dimen/dimen_6dp"
                    android:paddingRight="@dimen/dimen_20dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:text="UpGrade"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="visible"/>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_cashless_reddem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_20sp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:background="@drawable/corner_primarycolor"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_marginVertical="@dimen/dimen_8dp"
                    android:padding="@dimen/dimen_5dp"
                    android:src="@drawable/ic_print_icon"
                    android:tint="@color/white"
                    android:visibility="gone"
                    app:tint="@color/white"
                    tools:ignore="UseAppTint" />

                <androidx.appcompat.widget.AppCompatButton

                    android:id="@+id/ll_cashless_reddem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/popins_medium"
                    android:text="Redeem For Cashless"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="gone"
                    />


                <Button
                    android:id="@+id/show_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:background="@drawable/corner_prinr"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/popins_medium"

                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:text="Show Ticket"
                    android:textColor="@color/color2"
                    android:visibility="gone"
                    />

                <Button

                    android:id="@+id/allot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@drawable/corner_prinr"
                    android:drawablePadding="10dp"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp"
                    android:text="Allot"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_20sp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:background="@drawable/corner_prinr"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_marginVertical="@dimen/dimen_8dp"
                    android:src="@drawable/ic_whatsapp"
                    app:tint="@color/primary_color" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnWhatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/popins_medium"
                    android:text="Send on Whatsapp"
                    android:textColor="@color/primary_color"
                    />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:padding="5dp"
                android:text="webcontxt"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/dimen_20sp"
                android:visibility="gone"
                />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20sp"
        android:layout_marginVertical="@dimen/dimen_15dp"
        android:background="@drawable/corner_primarycolor"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginVertical="@dimen/dimen_8dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="@dimen/dimen_5dp"
            android:src="@drawable/ic_print_icon"
            android:tint="@color/white"
            app:tint="@color/white"
            tools:ignore="UseAppTint" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/popins_medium"
            android:text="Print"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_22sp" />


    </LinearLayout>

</LinearLayout>