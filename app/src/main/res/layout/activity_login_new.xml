<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.login.LoginActivityNew">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_120dp"
            android:adjustViewBounds="true"
            android:elevation="3dp"
            android:maxWidth="300dp"
            android:src="@drawable/ic_logo" />


        <LinearLayout
            android:id="@+id/info_layoyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_60dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_60dp"
            android:maxWidth="300dp"

            android:orientation="vertical">


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/edtemailmobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@android:color/white"
                    android:digits="1234567890"
                    android:gravity="center"
                    android:hint="Mobile Number"
                    android:imeOptions="actionSend"
                    android:inputType="number"
                    android:maxEms="10"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp"

                    android:paddingBottom="@dimen/dimen_8dp"
                    android:singleLine="true"
                    android:textColorHint="@color/color_grey"
                    android:textSize="@dimen/dimen_22sp"
                    android:textStyle="bold" />


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/edtemailmobile"
                    android:background="@color/primary_color" />


                <TextView
                    android:id="@+id/mobile_email_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="@dimen/dimen_13dp"
                    android:background="@drawable/rectangl_validation"
                    android:paddingLeft="@dimen/dimen_7dp"
                    android:paddingRight="@dimen/dimen_7dp"
                    android:text="Plsease fill mobile number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize"
                    android:visibility="gone" />

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_layoyt"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_layoyt"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_60dp"
                android:layout_marginRight="@dimen/dimen_60dp"
                android:background="@drawable/corner_primarycolor"
                android:maxWidth="300dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize"
                />


        </LinearLayout>

    </RelativeLayout>

</layout>