<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/root_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:adjustViewBounds="true"
                android:elevation="3dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/choose_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:fontFamily="@font/popins_medium"
                android:paddingRight="@dimen/dimen_8dp"
                android:text="Choose Location"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black2"
                android:textSize="@dimen/textsize" />


            <View
                android:id="@+id/view_orange"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_below="@+id/choose_language"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/primary_color" />


            <LinearLayout
                android:id="@+id/info_layoyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_orange"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_14dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/white"
                    android:scrollbars="none" />


            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/session_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:adjustViewBounds="true"
                android:elevation="3dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/choose_language1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo1"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:fontFamily="@font/popins_medium"
                android:paddingRight="@dimen/dimen_8dp"
                android:text="Choose Session"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black2"
                android:textSize="@dimen/textsize" />


            <View
                android:id="@+id/view_orange1"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_below="@+id/choose_language1"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:background="@color/primary_color" />


            <LinearLayout
                android:id="@+id/info_layoyt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_orange1"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_14dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_category1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/white"
                    android:scrollbars="none" />


            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>





</layout>