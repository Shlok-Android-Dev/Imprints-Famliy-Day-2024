<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:height="1dp"
                android:color="@color/xd_grey" />
            <solid android:color="@color/white" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp"
                android:top="1dp" />

            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"
                android:radius="8dp" android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
        </shape>
    </item>

</layer-list>